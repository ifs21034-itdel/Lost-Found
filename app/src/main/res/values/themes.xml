<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LostAndFound" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="myBackground">@color/light_primary</item>
        <item name="myContainerBackground">@color/yellow</item>
        <item name="myColorText">@color/light_text</item>
        <item name="myColorTextMuted">@color/light_muted</item>
        <item name="myColorNavBar">@color/white</item>
    </style>

    <style name="Theme.LostAndFound"
        parent="Base.Theme.LostAndFound" />

    <style name="Text">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextBold">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextBold.H1">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextBold.H2">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextBold.H3">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextBold.H4">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextBold.H5">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBold.H6">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBold.H7">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.P1">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Text.P2">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.P3">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.P4">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.P5">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.P6">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.P7">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button">
        <item name="android:padding">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/light_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/lostandfound</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.LostAndFound</item>
    </style>
</resources>